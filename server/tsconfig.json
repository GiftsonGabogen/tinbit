{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "paths": {
      "@controllers/*": ["./controllers/*"],
      "@utils/*": ["./utils/*"],
      "@routes/*": ["./routes/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
